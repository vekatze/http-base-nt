import {
  core.int.show {show-int},
  core.text {text-byte-length},
  this.field {Field},
  this.header {header},
}

data response {
| Response(
    status-code: int,
    fields: header,
    body: text,
  )
}

define text-response(status-code: int, body: text) {
  let len on body = text-byte-length(body);
  Response of {
    status-code,
    fields := [Field(*"content-length", show-int(len))],
    body,
  }
}
