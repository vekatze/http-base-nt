import {
  core.random {random-in-range-int},
  noa.rule.gen {Gen, gen},
  this.request-method {
    DELETE,
    GET,
    HEAD,
    OPTIONS,
    PATCH,
    POST,
    PUT,
    TRACE,
    request-method,
  },
  this.request-method.show,
}

inline request-method-gen: gen(request-method) {
  Gen of {
    generate := {
      function (_) {
        let dice = random-in-range-int(0, 7);
        match dice {
        | 0 =>
          GET
        | 1 =>
          HEAD
        | 2 =>
          POST
        | 3 =>
          PUT
        | 4 =>
          DELETE
        | 5 =>
          OPTIONS
        | 6 =>
          TRACE
        | _ =>
          PATCH
        }
      }
    },
    shrink := {
      function (m) {
        match m {
        | GET =>
          List[]
        | _ =>
          List[GET]
        }
      }
    },
    viewer := this.request-method.show.as-show,
  }
}
