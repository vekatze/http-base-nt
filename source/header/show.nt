import {
  core.list {for-each, length},
  core.show {Show, show},
  core.text {intercalate, join},
  this.field.show {show-field},
  this.header {header},
}

define show-header(fields: header): text {
  let len on fields = length(fields) in
  if eq-int(len, 0) {
    *""
  } else {
    let ts = for-each(fields, show-field) in
    let k = intercalate(ts, *"\r\n") in
    join([k, *"\r\n"])
  }
}

inline as-show: show(header) {
  Show of {show = show-header}
}
